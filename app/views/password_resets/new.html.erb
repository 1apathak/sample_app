<h1>Reset Password</h1>

<%= form_tag password_resets_path, :method => :post do  %>
<div class=row>
<div class="span4 offset4">
	<div class="field">
		<%= label_tag :email %>
		<%= text_field_tag :email, params[:email] %><br><br>
	</div>
	<div ><%= submit_tag "Reset Password", class:"btn btn-large btn-buy btn-primary"%></div>
	<% end %>
</div>
</div>